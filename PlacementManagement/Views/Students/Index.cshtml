@model IEnumerable<PlacementManagement.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dept.deptName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.otherdetails)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dept.deptName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MobNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.otherdetails)
        </td>
        @if (Session["role"].ToString().Equals("Admin")&&Session["dept"].ToString().Equals(item.Dept.deptName))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.studentId }) |
                @Html.ActionLink("Details", "Details", new { id = item.studentId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.studentId })
            </td>
        }
    </tr>
}

</table>
